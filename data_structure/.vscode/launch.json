            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb",
            // "preLaunchTask": "g++ build active file", // 假设你有一个任务来编译 C++ 文件
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
